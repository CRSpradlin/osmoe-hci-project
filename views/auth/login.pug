<form class="login__form" action="/login" method="post">
    <h3>Login to your Osmoe Account<span class="login__form-close" onclick="document.getElementById('loginModal').style.display='none';">X<span></h3>
    <span class="login__form-error" id="loginError">Could not find a user with that username and password combination</span>
    <div class="login__form-section">
        <label>Email:</label>
        <input class="login__form-input" type="text" name="email"/>
    </div>
    <div class="login__form-section">
        <label>Password:</label>
        <input class="login__form-input" type="password" name="password"/>
    </div>
    <div class="login__form-section">
        <input class="login__form-submit" type="submit" value="Log In"/>
    </div>
</form>                  
          


